@model ShopBanHang.Models.tblProductCategory

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var lstCategory = (List<ShopBanHang.Models.tblProductCategory>)ViewBag.ProductCategory;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="card">
        <div class="card-header">
            <h5>Thêm danh mục sản phẩm</h5>
        </div>
        <div class="card-body table-border-style">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">
                        <label>Tên danh mục sản phẩm: <span class="label-required">*</span></label>
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <label>Danh mục sản phẩm cha: <span class="label-required">*</span></label>
                        <select id="inputState" class="form-control" name="cboCategory">
                            <option value="-1" selected>Menu Root</option>
                            @if (lstCategory != null)
                            {
                                foreach (var item in lstCategory)
                                {
                                    <option value="@item.ID">@item.Name</option>
                                }
                            }
                        </select>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <label>Meta Title: <span class="label-required">*</span></label>
                        @Html.EditorFor(model => model.MetaTitle, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.MetaTitle, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <label>Hiển thị trên trang chủ: <span class="label-required">*</span></label>
                        <select id="inputState" class="form-control" name="cboShow">
                            <option value="1" selected>Có hiển thị</option>
                            <option value="0">Không hiển thị</option>
                        </select>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="form-group" style="margin-top: .5rem;">
                        <br />
                        <input type="submit" value="Ghi dữ liệu" class="btn btn-primary" />
                        @Html.ActionLink("Quay lại", "Index")
                    </div>
                </div>
            </div>
        </div>
    </div>
}
